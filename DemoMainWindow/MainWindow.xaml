<Window x:Class="DemoMainWindow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoMainWindow"
        mc:Ignorable="d"
        Title="Kafka Test Center" Height="1000" Width="2000">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>

		<!-- Top Left (3 columns) - Producer Message Output -->
		<Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" BorderBrush="Gray" BorderThickness="1" Margin="5">
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="*"/>
				</Grid.RowDefinitions>
				<TextBlock Grid.Row="0" Text="Producer Output" FontWeight="Bold" Margin="5"/>
				<local:OutputPanel Grid.Row="1" Logs="{Binding ProducerLogs}"/>
			</Grid>
		</Border>

		<!-- Top Right (3 columns) - Consumer Message Output -->
		<Border Grid.Row="0" Grid.Column="3" Grid.ColumnSpan="3" BorderBrush="Gray" BorderThickness="1" Margin="5">
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="*"/>
				</Grid.RowDefinitions>
				<TextBlock Grid.Row="0" Text="Consumer Output" FontWeight="Bold" Margin="5"/>
				<local:OutputPanel Grid.Row="1" Logs="{Binding ConsumerLogs}"/>
			</Grid>
		</Border>

		<!-- Bottom Left (2 columns) - Producer Control -->
		<Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" BorderBrush="Gray" BorderThickness="1" Margin="5">
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="*"/>
				</Grid.RowDefinitions>
				<TextBlock Grid.Row="0" Text="Producer Control" FontWeight="Bold" Margin="5"/>
				<local:ProducerControl Grid.Row="1"/>
			</Grid>
		</Border>

		<!-- Bottom Middle (2 columns) - Topic Watch -->
		<Border Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2" BorderBrush="Gray" BorderThickness="1" Margin="5">
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="*"/>
				</Grid.RowDefinitions>
				<TextBlock Grid.Row="0" Text="Topic Watch" FontWeight="Bold" Margin="5"/>
				<local:TopicWatchControl Grid.Row="1"/>
			</Grid>
		</Border>

		<!-- Bottom Right (2 columns) - Consumer Control -->
		<Border Grid.Row="1" Grid.Column="4" Grid.ColumnSpan="2" BorderBrush="Gray" BorderThickness="1" Margin="5">
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="*"/>
				</Grid.RowDefinitions>
				<TextBlock Grid.Row="0" Text="Consumer Control" FontWeight="Bold" Margin="5"/>
				<local:ConsumerControl Grid.Row="1"/>
			</Grid>
		</Border>
	</Grid>
</Window>
